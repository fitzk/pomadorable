{
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "description": "pomadorable",
  "icons": {
    "128": "src/_assets/icon128.png"
  },
  "manifest_version": 3,
  "name": "pomadorable",
  "permissions": [
    "scripting",
    "activeTab",
    "notifications",
    "storage",
    "alarms"
  ],
  "version": "1.0",
  "web_accessible_resources": [
    { "matches": ["<all_urls>"], "resources": ["src/_assets/*"] }
  ]
}
