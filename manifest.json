{
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content/index.tsx"],
      "matches": ["<all_urls>"]
    }
  ],
  "description": "Pomodoro for you",
  "devtools_page": "src/devtools/index.html",
  "icons": {
    "128": "src/_assets/icon128.png"
  },
  "manifest_version": 3,
  "name": "Yo Pomodoro",
  "permissions": ["scripting", "activeTab", "notifications", "storage", "alarms"],
  "version": "1.0"
}
